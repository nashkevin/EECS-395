block content
	- var avatars = ['bull', 'chick', 'crab', 'fox', 'hedgehog', 'hippopotamus', 'koala', 'lemur', 'pig', 'tiger', 'whale', 'zebra'];
	article#game
		section#chat
			p(
				id='ready'
				class='noselect'
			)
				input(
					type='checkbox'
					id='ready_to_vote'
				)
				label(for='ready_to_vote') Ready to vote

			form(action='javascript:sendChatMessage();')
				label
					img(src='images/players/' + avatars[0] + '.svg', class='avatar')
					input(
						type='text'
						id='message'
						name='message'
						autocomplete='off'
						maxlength=80
						placeholder='Send a message...'
					)
				button#submit(type='submit') Send

		section#players
			- for (var i=0; i<2; i++)
				blockquote(id='player' + i)
					p(id='player' + i + 'message', class='message')
					p.name
						img(
							class='avatar'
							src='/images/players/' + avatars[i] + '.svg'
						)
						= avatars[i]
