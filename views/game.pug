block content
	- var avatars = ['bull', 'chick', 'crab', 'fox', 'hedgehog', 'hippopotamus', 'koala', 'lemur', 'pig', 'tiger', 'whale', 'zebra'];
	- var playerCount = 8;
	article#game
		section#chat
			p(
				id='ready'
				class='noselect'
			)
				input(
					type='checkbox'
					id='readyToVote'
					onChange='sendReadyToVote();'
				)
				label(
					for='readyToVote'
				) Ready to vote

			form(action='javascript:sendChatMessage();')
				label
					img(src='images/players/' + avatars[playerId] + '.svg', class='avatar')
					| &nbsp;
					input(
						type='text'
						id='message'
						name='message'
						autocomplete='off'
						maxlength=80
						placeholder='Send a message...'
					)
				| &nbsp;
				button#submit(type='submit') Send

		section#players
			- for (var i=0; i<playerCount; i++)
				blockquote(id='player' + i)
					p(id='player' + i + 'message', class='message')
					p.name
						img(
							class='avatar'
							src='/images/players/' + avatars[i] + '.svg'
						)
						| &nbsp;
						= avatars[i].charAt(0).toUpperCase() + avatars[i].slice(1)

	article(
		id='voting'
		class='hidden'
	)
		h1 Identify the Robots
		form(
			id='votingForm'
			action='javascript:submitVotes();'
		)
			- for (var i=0; i<playerCount; i++)
				- if (i != playerId)
					p.name
						input(
							id='p' + i
							name=i
							type='checkbox'
							value='robot'
							class='voteInput'
						)
						label(for='p'+i)
							img(
								class='avatar'
								src='/images/players/' + avatars[i] + '.svg'
							)
							| &nbsp;
							= avatars[i].charAt(0).toUpperCase() + avatars[i].slice(1)

			button#submit(type='submit') Vote

	article(
		id='waitForVotes'
		class='hidden'
	)
		h1 Waiting for others to vote&hellip;

	article(
		id='results'
		class='hidden'
	)
		h1 Results
		dl
			- for (var i=0; i<playerCount; i++)
				dt
					img(
						class='avatar'
						src='/images/players/' + avatars[i] + '.svg'
					)
					| &nbsp;
					= avatars[i].charAt(0).toUpperCase() + avatars[i].slice(1)
				dd
					<span id="p!{i}-human"></span> votes for human,
					<span id="p!{i}-robot"></span> votes for robot.
					| &nbsp;Actually was <span id="p!{i}-identity"></span>.
